// Поместите параметры в этот файл, чтобы перезаписать параметры по умолчанию и пользовательские параметры.
{
    "code-runner.executorMap": {
        "cpp": "cd $dir && g++ -std=c++14 -Wall -I. -g -pthread $fullFileName && ./a.out"
    },
    "files.associations": {"*.cpp" : "cpp"},
    "python.linting.pylintArgs": [
        "--function-rgx=[a-z_][a-zA-Z0-9_]{2,30}$",
        "--module-rgx=",
        "--variable-rgx=[a-z_][a-zA-Z0-9_]{,30}$"
    ],
    "clang.cxxflags": ["-std=c++14"]
}